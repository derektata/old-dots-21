#!/bin/sh

mute=$(pulsemixer --get-mute)
vol=$(pulsemixer --get-volume | awk {'print $1'})

if [ "$mute" = "1" ]; then
  echo "ðŸ”‡ Muted"
elif [ "$(echo "$vol" | tr -d "%")" -gt 70 ]; then
  echo "ðŸ”Š $vol%"
elif [ "$(echo "$vol" | tr -d "%")" -gt 30 ]; then
  echo "ðŸ”‰ $vol%"
else
  echo "ðŸ”ˆ $vol%"
fi
